{
	"name": "brunohubner.com",
	"version": "0.1.0",
	"private": true,
	"author": "Bruno Hubner <brunohubnerdev@gmail.com>",
	"scripts": {
		"dev": "react-scripts start",
		"build": "react-scripts build",
		"serve": "serve -s build -p 8000",
		"lint": "eslint \"{src,apps,libs,test}/**/*.{ts,tsx}\" --fix",
		"format": "prettier --write \"src/**/*.{ts,tsx}\""
	},
	"dependencies": {
		"@types/node": "^20.1.4",
		"@types/react": "^18.2.6",
		"@types/react-dom": "^18.2.4",
		"@types/react-router-dom": "^5.3.3",
		"axios": "^1.4.0",
		"git-commit-msg-linter": "^5.0.4",
		"prettier": "^2.8.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.8.0",
		"react-router-dom": "^6.11.1",
		"react-scripts": "5.0.1",
		"sass": "^1.62.1",
		"serve": "^14.2.0",
		"typescript": "^5.0.4"
	},
	"engines": {
		"node": "18",
		"npm": "9"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"rules": {
			"no-console": "warn",
			"no-unused-vars": [
				"warn",
				{
					"argsIgnorePattern": "^_"
				}
			]
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"license": "MIT"
}