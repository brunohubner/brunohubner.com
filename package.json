{
    "name": "brunohubner.com",
    "version": "0.1.0",
    "private": true,
    "author": "Bruno Hubner <brunohubnerdev@gmail.com>",
    "scripts": {
        "dev": "react-scripts start",
        "build": "react-scripts build",
        "serve": "serve -s build",
        "lint": "eslint \"{src,apps,libs,test}/**/*.{ts,tsx}\" --fix",
        "format": "prettier --write \"src/**/*.{ts,tsx}\""
    },
    "dependencies": {
        "@types/node": "^17.0.36",
        "@types/react": "^18.0.9",
        "@types/react-dom": "^18.0.5",
        "@types/react-router-dom": "^5.3.3",
        "axios": "^0.27.2",
        "git-commit-msg-linter": "^4.1.3",
        "prettier": "^2.6.2",
        "react": "^18.1.0",
        "react-dom": "^18.1.0",
        "react-icons": "^4.3.1",
        "react-router-dom": "^6.3.0",
        "react-scripts": "5.0.1",
        "sass": "^1.52.1",
        "serve": "^13.0.2",
        "typescript": "^4.7.2"
    },
    "engines": {
        "node": "16.15.0"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ],
        "rules": {
            "no-console": "warn",
            "no-unused-vars": [
                "warn",
                {
                    "argsIgnorePattern": "^_"
                }
            ]
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "license": "MIT"
}